<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
    </style>

    <style name="SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/etColor</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
    </style>

    <style name="MainScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">#000</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
    </style>

    <style name="CallScreen" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/etColor</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorHint</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="SplashScreen.FinishRegistration" parent="SplashScreen">
        <item name="colorControlNormal">@color/colorHint</item>
    </style>

    <style name="PinCodeFragment" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.White" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_extra_light</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="PinCodeButton">
        <item name="android:layout_width">@dimen/circle_button_size</item>
        <item name="android:layout_height">@dimen/circle_button_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">@drawable/pincode_button_background</item>
        <!--<item name="android:clickable">true</item>-->
        <!--<item name="android:focusable">true</item>-->
        <!--<item name="android:focusableInTouchMode">true</item>-->
    </style>

</resources>
